{
    "name": "figma-text-to-table",
    "private": true,
    "version": "1.0.0",
    "description": "A high-performance Figma plugin that converts text data (CSV, TSV, Markdown tables) into beautiful, styled tables",
    "type": "module",
    "scripts": {
        "dev": "concurrently -k \"pnpm dev:fast\" \"pnpm watch:code\"",
        "dev:ui": "vite --config vite.ui.config.ts --mode development",
        "dev:code": "pnpm watch:code",
        "dev:fast": "vite --config vite.ui.config.ts --mode development",
        "dev:build": "concurrently -k \"pnpm watch:ui\" \"pnpm watch:code\"",
        "build:ui": "vite build --config vite.ui.config.ts",
        "build:code": "node esbuild.config.mjs",
        "build": "pnpm build:ui && pnpm build:code",
        "watch:ui": "vite build --watch --config vite.ui.config.ts --mode development",
        "watch:code": "node esbuild.config.mjs --watch",
        "watch": "concurrently -k \"pnpm watch:ui\" \"pnpm watch:code\"",
        "lint": "eslint .",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "@chakra-ui/react": "^3.19.1",
        "@emotion/react": "^11.14.0",
        "next-themes": "^0.4.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@figma/plugin-typings": "^1.113.0",
        "@types/node": "^22.15.21",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@typescript-eslint/parser": "^8.33.0",
        "@vitejs/plugin-react": "^4.4.1",
        "concurrently": "^9.1.2",
        "esbuild": "^0.25.5",
        "eslint": "^9.27.0",
        "eslint-plugin-chakra-ui": "^0.12.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.30.1",
        "vite": "^5.4.19",
        "vite-plugin-singlefile": "^2.2.0",
        "vite-tsconfig-paths": "^5.1.4"
    }
}
